{
    "extends": "@asva-labs-assessment/typescript-config/react.json",
    "jsx": "react-jsx",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@/public": [
                "./public/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "@/app/*": [
                "./src/app/*"
            ],
            "@/components/*": [
                "./src/components/*"
            ],
            "@/hooks/*": [
                "./src/hooks/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/providers/*": [
                "./src/providers/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.js",
        "./src/**/*.jsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}