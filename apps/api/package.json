{
  "name": "@asva-labs-assessment/api",
  "version": "1.0.0",
  "description": "Project Management API Service",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch",
    "dev": "npm run prisma:migrate:dev && ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "start": "node -r tsconfig-paths/register build/server.js",
    "start:prod": "pm2 start ecosystem.config.ts --env production",
    "prisma:generate": "dotenv -e ../../.env -- prisma generate",
    "prisma:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev --name init",
    "prisma:migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "prisma:reset": "dotenv -e ../../.env -- prisma migrate reset --force",
    "prisma:seed": "dotenv -e ../../.env -- ts-node prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "lint:rules": "eslint . --cache",
    "lint:code-format": "prettier --check \"{src,__mocks__}/**/*.{js,json,md,ts,yml,yaml}\"",
    "lint": "npm run lint:rules && npm run lint:code-format && npm run type-check",
    "lint:fix": "npm run lint:rules -- --fix",
    "format": "npm run lint:code-format --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "redis": "^5.6.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@asva-labs-assessment/eslint-config": "*",
    "@asva-labs-assessment/prettier-config": "*",
    "@asva-labs-assessment/typescript-config": "*",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
